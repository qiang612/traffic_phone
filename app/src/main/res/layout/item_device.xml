<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="16dp"
    android:gravity="center_vertical">

    <ImageView
        android:id="@+id/imageViewDeviceIcon"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@drawable/ic_devices" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical"
        android:layout_marginStart="16dp">

        <TextView
            android:id="@+id/textViewDeviceName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="路口摄像头01"
            android:textSize="16sp"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/textViewDeviceLocation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="学院路与清华东路交叉口"
            android:layout_marginTop="4dp"/>
    </LinearLayout>

    <TextView
        android:id="@+id/textViewDeviceStatus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="在线"
        android:padding="6dp"
        android:background="@drawable/status_background_online"
        android:textColor="@android:color/white"/>
</LinearLayout>